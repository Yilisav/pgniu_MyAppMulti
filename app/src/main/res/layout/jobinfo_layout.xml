<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.CJobInfo"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_last_name_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="last name  I N F O"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:layout_gravity="start"
            android:paddingStart="10dp"
            android:paddingTop="10dp"
            />
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tf_last_name_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Newname"
            android:layout_marginTop="50dp"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLength="120"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_first_name_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="first name I N F O"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:layout_gravity="start"
            android:paddingStart="10dp"
            android:layout_marginTop="10dp"
            />

        <Button
            android:id="@+id/close"
            android:background="@drawable/btn_shape_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/buxtonsketch"
            android:text="@string/close"
            android:layout_gravity="center"


            android:textSize="@dimen/SizeFontButton" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>