<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--стиль кнопок очистки, стирания-->
    <style name="ButtonStyleClear" parent="Theme.MaterialComponents">
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginLeft">5dp</item>

    </style>

    <!-- стиль конопок операций-->
    <style name="ButtonStyleOperation" parent="Theme.MaterialComponents">
        <item name="android:textColor">#FA0202</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginLeft">5dp</item>

    </style>

    <!--основной стиль кнопок-->
    <style name="ButtonStyle" parent="Theme.MaterialComponents">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginLeft">5dp</item>

    </style>



</resources>