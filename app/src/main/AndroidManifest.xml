<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <!-- Include this permission any time your app needs location information. -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <!-- Include only if your app benefits from precise location access. -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

<!--    Include this permission any time your app needs use camera.-->
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-feature
        android:name="android.hardware.camera"
        android:required="false"
        />

    <!-- Include this permission any time your app needs write data in external memory. ONLY up to Android v.9 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <!-- Include this permission any time your app needs read data in external memory. -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/ic_icon_main"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        tools:targetApi="31">

         <!-- main activity login & password -->
        <activity
            android:name=".activities.CMainActivity"
            android:exported="true"
            android:theme="@style/Theme.My">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Activity Jobs main for List jobs & Map jobs-->
        <activity
            android:name=".activities.CJobsMain"
            android:exported="false"
            android:theme="@style/Theme.MyAppMulti">
            <intent-filter>
                <action android:name="package.OtherActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <!-- Activity  Job info -->
        <activity
            android:name=".activities.CJobInfo"
            android:exported="false"
            android:theme="@style/Theme.My">
            <intent-filter>
                <action android:name="package.OtherActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>


        <!-- Activity calculator -->
        <activity
            android:name=".activities.CCalculator"
            android:exported="false"
            android:theme="@style/Theme.MyAppMulti">
            <intent-filter>
                <action android:name="package.OtherActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>


        <!-- Activity about program -->
        <activity
            android:name=".activities.CAbout"
            android:exported="false"
            android:gravity="center"
            android:label="@string/about_title"
            android:theme="@style/Theme.AppCompat.Dialog">
            <intent-filter>
                <action android:name="package.OtherActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>