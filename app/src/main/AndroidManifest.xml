<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        tools:targetApi="31">

        <!-- главная активность -->
        <activity
            android:name=".activities.CMainActivity"
            android:exported="true"
            android:theme="@style/Theme.My">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- активность jobs List -->
        <activity
            android:name=".activities.CJobsMain"
            android:exported="false"
            android:theme="@style/Theme.My">
            <intent-filter>
                <action android:name="package.OtherActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity> <!-- активность job info -->
        <activity
            android:name=".activities.CJobInfo"
            android:exported="false"
            android:theme="@style/Theme.My">
            <intent-filter>
                <action android:name="package.OtherActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity> <!-- активность карта -->
        <activity
            android:name=".activities.CMap"
            android:exported="false"
            android:theme="@style/Theme.My">
            <intent-filter>
                <action android:name="package.OtherActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity> <!-- активность калькулятор -->
        <activity
            android:name=".activities.CCalculator"
            android:exported="false"
            android:theme="@style/Theme.MyAppMulti">
            <intent-filter>
                <action android:name="package.OtherActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity> <!-- активность о программе -->
        <activity
            android:name=".activities.CAbout"
            android:exported="false"
            android:gravity="center"
            android:label="@string/about_title"
            android:theme="@style/Theme.AppCompat.Dialog">
            <intent-filter>
                <action android:name="package.OtherActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>